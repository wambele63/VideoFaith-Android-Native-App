<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/playdownload"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorLightAccentAds"
        android:id="@+id/closeplay"
        android:src="@drawable/ic_close_black_24dp"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/video_view_cont"
        android:layout_width="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:layout_height="202dp">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:padding="0dp"
            app:show_buffering="always"
            app:ad_marker_color="#ffff00"
            app:ad_marker_width="5dp"
            app:played_ad_marker_color="#00ff00"
            app:auto_show="true"
            android:background="@color/colorText"
            android:elevation="2dp"
            android:layout_gravity="fill"
            android:layout_marginTop="0dp"
            android:id="@+id/video_view"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/float_control"
            android:elevation="1dp"
            android:background="@color/Transparent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:id="@+id/returntv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/Transparent"
                android:src="@drawable/ic_fullscreen"
                />
            <ImageButton android:id="@+id/playfloat"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/Transparent"
                android:src="@drawable/ic_play_circle_filled_black_24dp"
                />
            <ImageButton android:id="@+id/pausefloat"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_marginBottom="3dp"
                android:background="@color/Transparent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_pause_circle_filled_black_24dp"
                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:id="@+id/closefloat"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@color/Transparent"
                android:src="@drawable/ic_clear_black_24dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_gravity="end"
            android:elevation="1dp"
            android:visibility="visible"
            android:id="@+id/normal_control"
            android:layout_marginEnd="3dp"
            android:background="@color/Transparent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="Download"
                android:layout_height="20dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="14dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/download"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/Transparent"
                android:id="@id/thisdownloadsimg"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="fullvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_screen_rotation_black_24dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_above="@id/thisdownloadsimg"
                android:layout_alignParentEnd="true"
                android:background="@color/Transparent"
                android:id="@+id/fullvideo"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="floatvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="14dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/loopvideo"
                android:src="@drawable/ic_minimize"
                android:background="@color/Transparent"
                android:id="@+id/floatvideo"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="fullvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="14dp"
                android:layout_above="@id/fullvideo"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_sound"
                android:background="@color/Transparent"
                android:id="@+id/mutevideo"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="fullvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="14dp"
                android:layout_above="@id/fullvideo"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_sound_off"
                android:background="@color/Transparent"
                android:id="@+id/unmutevideo"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="fullvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="14dp"
                android:scaleType="fitCenter"
                android:layout_above="@+id/mutevideo"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_replay"
                android:visibility="gone"
                android:background="@color/Transparent"
                android:id="@+id/loopvideo"
                />
            <ImageButton
                android:layout_width="20dp"
                android:contentDescription="fullvideo"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="14dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_above="@+id/mutevideo"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_repeat"
                android:background="@color/Transparent"
                android:id="@+id/unloopvideo"
                />
        </RelativeLayout>
    </FrameLayout>
        <FrameLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_below="@id/video_view_cont"
            android:id="@+id/ad_viewtv_container"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>