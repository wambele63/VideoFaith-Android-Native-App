 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:paddingBottom="12dp"
        android:paddingTop="6dp"
        android:id="@+id/card_view"
        android:background="@color/colorAccent"
        card_view:elevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            android:id="@+id/video_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_margin="0dp">
            <ImageView
                android:id="@+id/channelprofile"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/shadowround"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:maxWidth="55dp"
                android:maxHeight="55dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/channelname"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textAlignment="viewStart"
                android:layout_marginStart="70dp"
                android:paddingEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_mideum"
                android:textColor="@color/colorText"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/thisvideoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/channelid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/thischannelownerid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:text=""
                android:id="@+id/thisvideourl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/postdate"
                android:text="29 august at 2am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:fontFamily="@font/roboto_bold"
                android:layout_below="@id/postdownloads"
                android:layout_marginStart="75dp"
                android:layout_alignParentStart="true"
                android:textColor="#d4af37"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/postdownloads"
                android:layout_width="match_parent"
                android:background="@color/Transparent"
                android:layout_height="wrap_content"
                android:layout_below="@id/channelname"
                android:fontFamily="@font/roboto_thin"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:textAlignment="viewStart"
                android:layout_marginStart="75dp"
                android:textColor="#009900"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/videodesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxLines="3"
                android:layout_marginStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/colorText"
                android:fontFamily="@font/roboto_mideum"
                android:layout_below="@id/channelprofile"
                android:drawableStart="@drawable/ic_trending_up_black_smalldp"
                android:drawablePadding="5dp"
                android:text=""
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_overflow"/>
            <FrameLayout
                android:id="@+id/postercontainer"
                android:layout_below="@id/videodesc"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/poster"
                    android:layout_gravity="fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_poster"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="01:20:40"
                    android:id="@+id/duration"
                    android:padding="2.5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="end|bottom"
                    android:textColor="@color/colorAccent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/videobelow"
                android:layout_below="@id/postercontainer"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/channelOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Joseph Wambura"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/totalvideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/channelOwner"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:paddingRight="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/videolikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2300 Amens"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:elevation="1dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorTextfar"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/videoviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="233 views"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorTextfar"
                android:textSize="14sp" />
            </LinearLayout>
    <TextView
        android:id="@+id/amen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:padding="2dp"
        android:textColor="@color/colorPrimary"
        android:text="Amen"
        android:layout_marginEnd="13dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"
        android:includeFontPadding="true"
        android:drawableStart="@drawable/ic_thumb_up_black_24dp"
        />
    <TextView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:text="Download"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:padding="2dp"
        android:layout_marginEnd="120dp"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:includeFontPadding="true"
        android:paddingTop="30dp"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/ic_file_download_black_24dp"
        />
    <TextView
        android:id="@+id/sharei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:padding="2dp"
        android:focusable="true"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_marginEnd="22dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/videobelow"
        android:drawableStart="@drawable/ic_share_small"
        android:includeFontPadding="true"
        />
            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/overflow"
                android:src="@drawable/ic_share_small"
                />
</RelativeLayout>
    </RelativeLayout>