<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDarkVideo"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:text="Add News"
        />
    <EditText
        android:id="@+id/newhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:inputType="text|textCapWords|textMultiLine"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:background="@drawable/borderdark"
        android:hint="Type New's Head"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="4"/>
    <EditText
        android:id="@+id/newbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:layout_margin="12dp"
        android:inputType="text|textCapWords|textMultiLine"
        android:padding="5dp"
        android:background="@drawable/borderdark"
        android:fontFamily="@font/roboto_regular"
        android:hint="Type/Paste Your News Update"
        android:maxLines="6"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:background="@drawable/borderdark"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        />
    <ImageView
        android:id="@+id/newimage"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_margin="2dp"
        android:background="@color/colorPrimaryDarkVideo"
        android:layout_gravity="center"
        android:src="@drawable/ic_photo_camera_black_24dp"/>
    <Button
        android:id="@+id/newupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Post New Headline"
        android:textAllCaps="false"
        android:padding="8dp"
        android:backgroundTint="#330033"
        android:textColor="@color/colorAccent"
        android:layout_margin="12dp"/>
</LinearLayout>
</ScrollView>