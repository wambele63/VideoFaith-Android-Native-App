<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".searchActivity">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/ic_do_not_disturb_black_24dp"
        android:text="Oouch!! No Results"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDiluted"
        android:id="@+id/progressmoreresults"
        android:background="@color/colorAccent"
        android:padding="10dp"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:paddingStart="10dp"
        android:paddingEnd="6dp"
        android:layout_height="55dp">
        <com.google.android.material.textfield.TextInputEditText
            android:autofillHints="@string/NewsBannerAd_unit_id"
            android:layout_width="0dp"
            android:hint="Search"
            android:layout_weight=".8"
            android:padding="10dp"
            android:id="@+id/keyword"
            android:textCursorDrawable="@null"
            android:background="@color/colorAccent"
            style="@style/Theme.MaterialComponents"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:inputType="textCapWords"
            android:layout_height="match_parent"/>
        <ImageButton
            android:contentDescription="search"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:id="@+id/searchnow"
            style="@style/Theme.MaterialComponents"
            android:layout_margin="4dp"
            android:background="@drawable/borderleft"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_height="match_parent"/>
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:paddingStart="6dp"
        android:id="@+id/customizeSearch"
        android:paddingEnd="6dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        android:background="@color/colorAccent"
        android:layout_height="55dp">
        <com.google.android.material.textview.MaterialTextView
            android:text="All"
            android:tag="all"
            android:background="@color/colorAccent"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_weight=".2"
            android:textSize="15sp"
            android:textAlignment="center"
            android:padding="7dp"
    android:layout_width="0dp"
            android:layout_margin="6dp"
            android:textAllCaps="false"
            android:id="@+id/all"
            android:textColor="@color/colorText"
            android:layout_height="match_parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:text="Videos"
            android:layout_weight=".25"
            android:tag="videos"
            android:id="@+id/video"
            android:layout_margin="6dp"
            android:padding="7dp"
            android:background="@color/colorAccent"
            style="@style/Widget.MaterialComponents.TextView"

            android:layout_width="0dp"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="match_parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:text="News"
            android:id="@+id/news"
            android:layout_weight=".2"
            android:tag="news"
            android:textSize="15sp"
            android:background="@color/colorAccent"
            android:textAllCaps="false"
            android:textAlignment="center"
            style="@style/Widget.MaterialComponents.TextView"

            android:textColor="@color/colorText"
            android:layout_margin="6dp"
            android:padding="7dp"
    android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:text="Channels"
            android:layout_weight=".35"
            android:tag="channels"
            android:id="@+id/channel"
            android:textAlignment="center"
            style="@style/Widget.MaterialComponents.TextView"

            android:textColor="@color/colorText"
            android:layout_margin="6dp"
    android:layout_width="0dp"
            android:padding="7dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"/>
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/searchResults"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>