 <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     android:padding="5dp"
        android:id="@+id/card_view"
        android:background="@color/Transparent">
     <FrameLayout
         android:id="@+id/channelprofile"
         android:layout_width="150dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_centerVertical="true"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/poster"
             android:layout_gravity="start"
             android:background="@drawable/shadow"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
     </FrameLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         app:layout_constraintStart_toEndOf="@+id/channelprofile"
         app:layout_constraintTop_toTopOf="@+id/card_view"
         android:layout_marginStart="152dp">
            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/contenthead"
                android:text="Heloo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_margin="5dp"
                android:maxLines="3"
                android:padding="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_mideum"
                android:textColor="@color/colorText"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/contentid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/contentpictureurl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/contenttag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/contentdesc"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="whaoo 123"/>
     </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>