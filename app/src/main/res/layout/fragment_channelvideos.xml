<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Transparent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarc"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="240dp"
        android:background="@drawable/gradientback"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:background="@color/colorLightAccent"
            app:expandedTitleMarginEnd="64dp"
            android:padding="0dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/chanpadc"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/channcover"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:paddingStart="16dp"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="16dp"
                    android:elevation="1dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/gradientbackchannel"
                    android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channelhint"
                    android:padding="10dp"
                    android:maxLines="5"
                    android:layout_alignParentTop="true"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_mideum"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_avatar2"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/profile">
                        <TextView
                            android:id="@+id/subtitlevids"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="102 videos"
                            android:padding="3dp"
                            android:maxLines="1"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                        android:id="@+id/subtitlesub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56 subscribers"
                        android:layout_below="@+id/subtitlevids"
                        android:padding="3dp"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/subtitleowner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner: Julius, Richard"
                        android:layout_below="@id/subtitlesub"
                        android:padding="3dp"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </RelativeLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBSCRIBE"
                        android:padding="5dp"
                        android:backgroundTint="@color/colorAccent"
                        android:id="@+id/subscribec"
                        android:layout_marginTop="50dp"
                        android:layout_below="@id/profile"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_mideum"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:elevation="5dp"
        android:background="@color/colorAccent"
    android:id="@+id/collapsedbar"
    android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/collapsedwrapper"
            android:background="@drawable/gradientback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:id="@+id/collapsedbarimg"
        android:layout_height="60dp"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@+id/collapsedbarimg"
        android:id="@+id/collapsedbart"
        android:fontFamily="@font/roboto_mideum"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:maxLines="3"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
            android:layout_below="@id/collapsedwrapper"
        android:fontFamily="cursive"
        android:elevation="2dp"
            android:textSize="20sp"
            android:background="@color/colorAccent"
        android:textColor="@color/colorText"
        android:text="All Videos"
        />
    </RelativeLayout>
    <include layout="@layout/content_main_channel" />
    <include layout="@layout/maintv" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>